apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-production-http01
  namespace: cert-manager
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: ${lets_encrypt_email}
    privateKeySecretRef:
      name: letsencrypt-production-http01
    solvers:
    - selector: {}
      http01:
        ingress:
          ingressClassName: ${ingress_class_name}